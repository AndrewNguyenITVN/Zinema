        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/RoomInput"}
            }
          }
        },
        "responses": {
          "201": {"$ref": "#/components/responses/RoomCreated"},
          "403": {"$ref": "#/components/responses/Forbidden"}
