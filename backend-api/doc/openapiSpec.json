  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login",
        "description": "0987654321 admin123",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/LoginInput"}
            }
          }
        },
        "responses": {
          "200": {"$ref": "#/components/responses/LoginSuccess"},
          "401": {"$ref": "#/components/responses/Unauthorized"}
        }
      }
    },
    "/api/auth/google": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Đăng nhập với Google OAuth 2.0",
        "description": "Redirect đến Google để xác thực. Sau khi thành công, Google sẽ redirect về callback URL.",
        "responses": {
          "302": {
            "description": "Redirect to Google OAuth",
            "headers": {
              "Location": {
                "schema": {"type": "string"},
                "description": "Google OAuth authorization URL"
              }
            }
          },
          "500": {"$ref": "#/components/responses/InternalServerError"}
        }
      }
    },
    "/api/auth/employees": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Lấy danh sách nhân viên (Admin only)",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {"$ref": "#/components/responses/StaffList"},
          "403": {"$ref": "#/components/responses/Forbidden"}
        }
      }
    },
    "/api/auth/employee/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Thêm nhân viên mới (Admin only)",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/StaffInput"}
            }
          }
        },
        "responses": {
          "201": {"$ref": "#/components/responses/UserCreated"},
          "403": {"$ref": "#/components/responses/Forbidden"}
        }
      }
    },
    "/api/auth/customers": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Lấy danh sách khách hàng (Admin/Staff only)",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {"$ref": "#/components/responses/CustomersList"},
          "403": {"$ref": "#/components/responses/Forbidden"}
        }
      }
    },
    "/api/movies": {
      "get": {
        "tags": ["movies"],
        "summary": "Lấy danh sách phim",
        "parameters": [
          {"$ref": "#/components/parameters/PageParam"},
          {"$ref": "#/components/parameters/LimitParam"},
          {"name": "title", "in": "query", "schema": {"type": "string"}},
          {"name": "genre", "in": "query", "schema": {"type": "string"}}
        ],
        "responses": {
          "200": {"$ref": "#/components/responses/FilmsList"}
        }
      },
      "post": {
        "tags": ["movies"],
        "summary": "Thêm phim mới (Admin)",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {"$ref": "#/components/schemas/FilmInput"}
            }
          }
        },
        "responses": {
          "201": {"$ref": "#/components/responses/FilmCreated"},
          "403": {"$ref": "#/components/responses/Forbidden"}
        }
      }
    },
    "/api/movies/{id}": {
      "get": {
        "tags": ["movies"],
        "summary": "Lấy thông tin phim theo ID",
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {
          "200": {"$ref": "#/components/responses/FilmDetail"},
          "404": {"$ref": "#/components/responses/NotFound"}
        }
      },
      "put": {
        "tags": ["movies"],
        "summary": "Cập nhật phim (Admin)",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {"$ref": "#/components/schemas/FilmInput"}
            }
          }
        },
        "responses": {
          "200": {"$ref": "#/components/responses/FilmUpdated"},
          "403": {"$ref": "#/components/responses/Forbidden"},
          "404": {"$ref": "#/components/responses/NotFound"}
        }
      },
      "delete": {
        "tags": ["movies"],
        "summary": "Xóa mềm phim (Admin)",
        "description": "Thao tác này không xóa phim vĩnh viễn khỏi CSDL, mà chỉ cập nhật trạng thái của phim thành 'inactive'.",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {
          "200": {"$ref": "#/components/responses/Success"},
          "403": {"$ref": "#/components/responses/Forbidden"},
          "404": {"$ref": "#/components/responses/NotFound"}
        }
      }
    },
    "/api/rooms": {
      "get": {
        "tags": ["Rooms"],
