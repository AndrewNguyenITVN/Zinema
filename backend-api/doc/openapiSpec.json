        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {
          "200": {"$ref": "#/components/responses/RoomDetail"}
        }
      },
      "put": {
        "tags": ["Rooms"],
        "summary": "Cập nhật phòng (Admin)",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/RoomInput"}
            }
          }
        },
        "responses": {
          "200": {"$ref": "#/components/responses/RoomUpdated"},
          "403": {"$ref": "#/components/responses/Forbidden"},
          "404": {"$ref": "#/components/responses/NotFound"}
        }
      },
      "delete": {
        "tags": ["Rooms"],
        "summary": "Xóa phòng (Admin)",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {
          "200": {"$ref": "#/components/responses/Success"},
          "403": {"$ref": "#/components/responses/Forbidden"},
          "404": {"$ref": "#/components/responses/NotFound"}
        }
      }  
    },
    "/api/showtimes": {
      "get": {
        "tags": ["Showtimes"],
        "summary": "Lấy danh sách suất chiếu",
        "parameters": [
          {"$ref": "#/components/parameters/PageParam"},
          {"name": "film_id", "in": "query", "schema": {"type": "integer"}},
          {"name": "date", "in": "query", "schema": {"type": "string", "format": "date"}}
        ],
        "responses": {
          "200": {"$ref": "#/components/responses/ShowtimesList"}
        }
      },
      "post": {
        "tags": ["Showtimes"],
        "summary": "Tạo suất chiếu mới (Admin/Staff)",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/ShowtimeInput"}
            }
          }
        },
        "responses": {
          "201": {"$ref": "#/components/responses/ShowtimeCreated"},
          "403": {"$ref": "#/components/responses/Forbidden"}
        }
      }
    },
    "/api/showtimes/{id}": {
      "get": {
        "tags": ["Showtimes"],
        "summary": "Lấy thông tin suất chiếu",
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {
          "200": {"$ref": "#/components/responses/ShowtimeDetail"}
        }
      },
      "put": {
        "tags": ["Showtimes"],
        "summary": "Cập nhật suất chiếu (Admin/Staff)",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/ShowtimeInput"}
            }
          }
        },
        "responses": {
          "200": {"$ref": "#/components/responses/ShowtimeUpdated"},
          "403": {"$ref": "#/components/responses/Forbidden"},
          "404": {"$ref": "#/components/responses/NotFound"}
        }
      },
      "delete": {
        "tags": ["Showtimes"],
        "summary": "Xóa suất chiếu (Admin/Staff)",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {"name": "id", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {
          "200": {"$ref": "#/components/responses/Success"},
