    "/api/showtimes/movies/{movieId}": {
      "get": {
        "tags": ["Showtimes"],
        "summary": "Lấy suất chiếu theo phim",
        "parameters": [
          {"name": "movieId", "in": "path", "required": true, "schema": {"type": "integer"}}
        ],
        "responses": {
          "200": {"$ref": "#/components/responses/ShowtimesList"}
        }
      }
    }   
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "parameters": {
      "PageParam": {
        "name": "page",
        "in": "query",
        "schema": {"type": "integer", "default": 1}
      },
      "LimitParam": {
        "name": "limit", 
        "in": "query",
        "schema": {"type": "integer", "default": 10}
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "full_name": {"type": "string"},
          "email": {"type": "string"},
          "phone_number": {"type": "string"},
          "role": {"type": "string", "enum": ["admin", "staff"]}
        }
      },
      "GoogleCompleteInput": {
        "type": "object",
        "required": ["phone_number"],
        "properties": {
          "phone_number": {"type": "string"},
          "full_name": {"type": "string"},
          "temp_data": {"type": "string"}
        }
      },
      "LoginInput": {
        "type": "object",
        "required": ["phone_number", "password"],
        "properties": {
          "phone_number": {"type": "string"},
          "password": {"type": "string"}
        }
      },
      "StaffInput": {
        "type": "object",
        "required": ["full_name", "email", "phone_number", "password", "password_confirm"],
        "properties": {
          "full_name": {"type": "string"},
          "email": {"type": "string", "format": "email"},
          "phone_number": {"type": "string"},
          "password": {"type": "string"},
          "password_confirm": {"type": "string"},
          "date_of_birth": {"type": "string", "format": "date"},
          "address": {"type": "string"},
          "position": {"type": "string"}
        }
      },
      "Film": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "director": {"type": "string"},
          "genre": {"type": "string"},
          "duration": {"type": "integer"},
          "cast": {"type": "string"},
          "release_date": {"type": "string", "format": "date"},
          "country": {"type": "string"},
          "rating": {"type": "string", "enum": ["G", "PG", "PG-13", "R", "NC-17", "T13", "T16", "T18", "C"]},
          "status": {"type": "string", "enum": ["active", "inactive"]},
          "trailer_url": {"type": "string", "format": "uri"},
          "poster_url": {"type": "string", "format": "uri"}
        }
      },
      "FilmInput": {
        "type": "object",
        "required": ["title", "description", "duration", "release_date", "genre", "director", "cast", "country", "rating"],
        "properties": {
          "title": {"type": "string"},
          "description": {"type": "string"},
          "duration": {"type": "integer"},
          "release_date": {"type": "string", "format": "date"},
          "genre": {"type": "string"},
          "director": {"type": "string"},
          "cast": {"type": "string"},
          "country": {"type": "string"},
          "rating": {"type": "string", "enum": ["G", "PG", "PG-13", "R", "NC-17", "T13", "T16", "T18", "C"]},
          "status": {"type": "string", "enum": ["active", "inactive"], "default": "active"},
          "trailer_url": {"type": "string", "format": "uri"},
          "poster": {"type": "string", "format": "binary", "description": "File poster để upload"}
        }
      },
      "Room": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "name": {"type": "string"},
          "capacity": {"type": "integer"},
          "rows": {"type": "integer"},
          "columns": {"type": "integer"},
          "type": {"type": "string", "enum": ["2D", "3D", "4DX", "IMAX"]},
          "status": {"type": "string", "enum": ["active", "maintenance", "inactive"]}
        }
      },
      "RoomInput": {
        "type": "object",
        "required": ["name", "capacity", "rows", "columns", "type"],
        "properties": {
          "name": {"type": "string"},
          "capacity": {"type": "integer"},
          "rows": {"type": "integer"},
          "columns": {"type": "integer"},
          "type": {"type": "string", "enum": ["2D", "3D", "4DX", "IMAX"]},
          "status": {"type": "string", "enum": ["active", "maintenance", "inactive"], "default": "active"}
        }
      },
      "Seat": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "cinema_room_id": {"type": "integer"},
          "seat_type_id": {"type": "integer"},
          "name": {"type": "string"},
          "row": {"type": "string"},
          "column": {"type": "integer"},
          "status": {"type": "string", "enum": ["available", "unavailable"]},
          "price": {"type": "number"}
        }
      },
      "Showtime": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "film_id": {"type": "integer"},
          "room_id": {"type": "integer"},
          "start_time": {"type": "string", "format": "date-time"},
          "end_time": {"type": "string", "format": "date-time"},
          "price": {"type": "number"},
          "status": {"type": "string", "enum": ["scheduled", "canceled", "completed"]},
          "film": {"$ref": "#/components/schemas/Film"},
          "room": {"$ref": "#/components/schemas/Room"}
        }
      },
      "ShowtimeInput": {
        "type": "object",
        "required": ["film_id", "room_id", "start_time", "end_time", "price"],
        "properties": {
          "film_id": {"type": "integer"},
          "room_id": {"type": "integer"},
          "start_time": {"type": "string", "format": "date-time"},
          "end_time": {"type": "string", "format": "date-time"},
          "price": {"type": "number"}
        }
      }
    },
    "responses": {
      "Success": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {"type": "object"}
              }
            }
          }
        }
      },
      "UserCreated": {
        "description": "Create user successfully",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "user": {"$ref": "#/components/schemas/User"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      },
      "LoginSuccess": {
        "description": "Login successfully",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "user": {"$ref": "#/components/schemas/User"},
                    "token": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      },
      "GoogleAuthSuccess": {
        "description": "Google OAuth successfully",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "isNewUser": {
                      "type": "boolean",
                      "description": "True nếu là user mới được tạo, false nếu là user đã tồn tại"
                    },
                    "user": {"$ref": "#/components/schemas/User"},
                    "token": {
                      "type": "string",
                      "description": "JWT token để authenticate các request tiếp theo"
                    },
                    "message": {
                      "type": "string",
                      "examples": ["Account created successfully!", "Login successful"]
                    }
                  }
                }
              }
            },
            "examples": {
              "newUser": {
                "summary": "User mới được tạo",
                "value": {
                  "status": "success",
                  "data": {
                    "isNewUser": true,
                    "user": {
                      "id": 25,
                      "email": "user@gmail.com",
                      "auth_provider": "google",
                      "role": "customer",
                      "full_name": "User Name",
                      "phone_number": null
                    },
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                    "message": "Account created successfully!"
                  }
                }
              },
              "existingUser": {
                "summary": "User đã tồn tại",
                "value": {
                  "status": "success",
                  "data": {
                    "isNewUser": false,
                    "user": {
                      "id": 25,
                      "email": "user@gmail.com",
                      "auth_provider": "google",
                      "role": "customer",
                      "full_name": "User Name",
                      "phone_number": "0987654321"
                    },
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                    "message": "Login successful"
                  }
                }
              }
            }
          }
        }
      },
      "UserInfo": {
        "description": "User information",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "user": {"$ref": "#/components/schemas/User"}
                  }
                }
              }
            }
          }
        }
      },
      "StaffList": {
        "description": "Staff list",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "staffUsers": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/User"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "CustomersList": {
        "description": "Customer list",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "customers": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/User"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "RoomsList": {
        "description": "Showroom list",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "rooms": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Room"}
                    }
                  }
                }
              }
            }
          }
        }
      },
      "RoomDetail": {
        "description": "Showroom detail",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "room": {"$ref": "#/components/schemas/Room"}
                  }
                }
              }
            }
          }
        }
      },
      "FilmsList": {
        "description": "Film list",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "films": {
                      "type": "array",
                      "items": {"$ref": "#/components/schemas/Film"}
                    },
                    "metadata": {"$ref": "#/components/schemas/PaginationMetadata"}
                  }
                }
              }
            }
          }
        }
      },
      "FilmDetail": {
        "description": "Film detail",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {"type": "string", "example": "success"},
                "data": {
                  "type": "object",
                  "properties": {
                    "film": {"$ref": "#/components/schemas/Film"}
                  }
                }
              }
            }
          }
